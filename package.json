{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-charts",
  "title": "raycast-charts",
  "description": "Charts about the Raycast store",
  "icon": "analytics.png",
  "author": "tonka3000",
  "license": "MIT",
  "commands": [
    {
      "name": "extension_charts",
      "title": "Extension Charts",
      "subtitle": "Raycast",
      "description": "Charts ranked by extension install count",
      "mode": "view"
    },
    {
      "name": "extensions_news",
      "title": "Extension News",
      "subtitle": "Raycast",
      "description": "Show Extension which are new or get updated",
      "mode": "view"
    },
    {
      "name": "author_charts",
      "title": "Author Charts",
      "subtitle": "Raycast",
      "description": "Charts ranked by install count of an authors extensions in total",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "showinstallscompact",
      "type": "checkbox",
      "label": "Show compact numbers",
      "required": false,
      "default": true,
      "title": "Installs",
      "description": "Show install numbers compact"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.0",
    "node-fetch": "^3.2.3",
    "node-localstorage": "^2.2.1",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
